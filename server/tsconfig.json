{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "exclude": [
                "node_modules/*"
            ],
            "*": [
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}